{
	"name": "anthelion",
	"author": "UnownPlain",
	"license": "MIT",
	"description": "Scripts and tools used to automatically update some packages in the Windows Package Manager Community Repository",
	"private": "true",
	"main": "src/main.ts",
	"type": "module",
	"scripts": {
		"start": "bun src/main.ts",
		"pkgtest": "bun src/test.ts",
		"format": "oxfmt",
		"lint": "oxlint --type-aware --fix",
		"formatcheck": "oxfmt --check",
		"lintcheck": "oxlint --deny-warnings --type-aware",
		"gen-schema": "bun run src/schema/task/schema.ts && oxfmt"
	},
	"dependencies": {
		"@std/fs": "npm:@jsr/std__fs@1.0.20",
		"@std/semver": "npm:@jsr/std__semver@1.0.7",
		"ansis": "4.2.0",
		"dot-prop": "10.1.0",
		"es-toolkit": "1.43.0",
		"ky": "1.14.1",
		"octokit": "5.0.5",
		"temporal-polyfill": "0.3.0",
		"zod": "4.1.13"
	},
	"devDependencies": {
		"@types/bun": "1.3.4",
		"@types/node": "25.0.1",
		"oxfmt": "0.17.0",
		"oxlint": "1.32.0",
		"oxlint-tsgolint": "0.8.6"
	}
}
