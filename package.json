{
	"name": "anthelion",
	"private": "true",
	"description": "Scripts and tools used to automatically update some packages in the Windows Package Manager Community Repository",
	"license": "MIT",
	"author": "UnownPlain",
	"type": "module",
	"main": "src/main.ts",
	"scripts": {
		"start": "bun src/main.ts",
		"pkgtest": "bun src/test.ts",
		"format": "oxfmt",
		"lint": "oxlint --type-check --type-aware",
		"gen-schema": "bun run src/schema/task/schema.ts && oxfmt"
	},
	"dependencies": {
		"@rcompat/fs": "0.25.2",
		"@unownplain/anthelion-komac": "0.0.8",
		"ansis": "4.2.0",
		"dot-prop": "10.1.0",
		"es-toolkit": "1.44.0",
		"ky": "1.14.3",
		"octokit": "5.0.5",
		"temporal-polyfill": "0.3.0",
		"yaml": "2.8.2",
		"zod": "4.3.6"
	},
	"devDependencies": {
		"@types/bun": "1.3.9",
		"@types/node": "25.2.3",
		"oxfmt": "0.33.0",
		"oxlint": "1.48.0",
		"oxlint-tsgolint": "0.14.0"
	},
	"packageManager": "bun@1.3.9"
}
