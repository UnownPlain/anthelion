{
	"name": "anthelion",
	"author": "UnownPlain",
	"license": "MIT",
	"description": "Scripts and tools used to automatically update some packages in the Windows Package Manager Community Repository",
	"private": "true",
	"main": "src/main.ts",
	"type": "module",
	"packageManager": "bun@1.2.19",
	"scripts": {
		"start": " bun src/main.ts",
		"pkgtest": "bun src/test.ts",
		"dev-deno": "deno run --quiet --allow-read --allow-net --allow-env --env-file=.env --allow-run=komac src/main.ts",
		"test-deno": "deno run --quiet --allow-read --allow-net --allow-env --env-file=.env --allow-run=komac src/test.ts",
		"dev-node": "node --experimental-strip-types --experimental-transform-types --env-file=.env src/main.ts",
		"test-node": "node --experimental-strip-types --experimental-transform-types --env-file=.env src/main.ts",
		"format": "prettier --write .",
		"lint": "oxlint --type-aware --fix .",
		"formatcheck": "prettier --check .",
		"lintcheck": "oxlint --deny-warnings --type-aware .",
		"typecheck": "tsc"
	},
	"dependencies": {
		"@js-temporal/polyfill": "^0.5.1",
		"@std/fs": "npm:@jsr/std__fs@^1.0.19",
		"@std/path": "npm:@jsr/std__path@^1.1.2",
		"@std/semver": "npm:@jsr/std__semver@^1.0.5",
		"@std/yaml": "npm:@jsr/std__yaml@^1.0.9",
		"ansis": "^4.1.0",
		"es-toolkit": "^1.39.10",
		"ky": "^1.9.0",
		"octokit": "^5.0.3",
		"zod": "^4.0.17"
	},
	"devDependencies": {
		"@types/node": "^24.3.0",
		"oxlint": "^1.12.0",
		"oxlint-tsgolint": "^0.0.4",
		"prettier": "^3.6.2",
		"typescript": "^5.9.2"
	}
}
