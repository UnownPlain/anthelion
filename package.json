{
	"name": "anthelion",
	"author": "UnownPlain",
	"license": "MIT",
	"description": "Scripts and tools used to automatically update some packages in the Windows Package Manager Community Repository",
	"private": "true",
	"main": "src/main.ts",
	"type": "module",
	"scripts": {
		"start": " bun src/main.ts",
		"format": "prettier --write .",
		"lint": "oxlint --type-aware --fix .",
		"formatcheck": "prettier --check .",
		"lintcheck": "oxlint --deny-warnings --type-aware .",
		"typecheck": "tsc",
		"gen-schema": "bun run src/schema/task/schema.ts && prettier --write --log-level silent ."
	},
	"dependencies": {
		"@js-temporal/polyfill": "^0.5.1",
		"@std/fs": "npm:@jsr/std__fs@^1.0.19",
		"@std/path": "npm:@jsr/std__path@^1.1.2",
		"@std/semver": "npm:@jsr/std__semver@^1.0.5",
		"@std/yaml": "npm:@jsr/std__yaml@^1.0.9",
		"ansis": "^4.1.0",
		"dot-prop": "^9.0.0",
		"es-toolkit": "^1.39.10",
		"ky": "^1.10.0",
		"octokit": "^5.0.3",
		"zod": "^4.1.6"
	},
	"devDependencies": {
		"@types/bun": "^1.2.21",
		"@types/node": "^24.3.1",
		"oxlint": "^1.14.0",
		"oxlint-tsgolint": "^0.2.0",
		"prettier": "^3.6.2",
		"typescript": "^5.9.2"
	}
}
