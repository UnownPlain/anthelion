{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": ["config:recommended", ":disableDependencyDashboard", "security:minimumReleaseAgeNpm"],
	"rangeStrategy": "bump",
	"packageRules": [
		{
			"matchUpdateTypes": ["minor", "patch", "digest"],
			"automerge": true
		}
	],
	"customManagers": [
		{
			"customType": "regex",
			"managerFilePatterns": ["/(^|/)package.json$/"],
			"depNameTemplate": "bun",
			"datasourceTemplate": "npm",
			"versioningTemplate": "npm",
			"matchStrings": ["\"packageManager\":\\s+\"bun@(?<currentValue>\\d+\\.\\d+\\.\\d+)\""]
		}
	]
}
